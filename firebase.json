{
  "hosting": {
    "target": "rebot",
    "public": "build",
    "redirects": [
      {
        "source": "/get",
        "destination": "/install.html",
        "type": 301
      },
      {
        "source": "/timetable",
        "destination": "/timetable.html",
        "type": 301
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "emulators": {
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true
    },
    "functions": {
      "port": 5001
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5000
    }
  }
}
